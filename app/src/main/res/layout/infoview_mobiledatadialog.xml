<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#000000"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="1dp"
		android:orientation="vertical"
		android:background="#ffffff">
    
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:background="#444444"
	        android:gravity="center_horizontal"
            android:text="Mobile data status"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="10dp" />
        
	    <TableLayout
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			android:layout_margin="10dp">

            <TextView
                android:id="@+id/infoview_mobiledatadialog_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="URL: "
                android:textColor="#000000"
                android:textSize="16sp" />
	        			
	        <TableRow android:layout_marginBottom="5dp">
	            
	            <TextView
	                android:layout_width="0px"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="Mobile phone signal"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	            <TextView 
	                android:id="@+id/infoview_mobiledatadialog_phone"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	        </TableRow>

	        <TableRow android:layout_marginBottom="5dp">
	            
	            <TextView
	                android:layout_width="0px"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="Mobile data signal"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	            <TextView 
	                android:id="@+id/infoview_mobiledatadialog_data"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	        </TableRow>

	        <TableRow android:layout_marginBottom="15dp">
	            
	        	<TextView
	                android:layout_width="0px"
	                android:layout_height="wrap_content"
	                android:layout_weight="5"
	                android:text="Message queue length"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	        	<TextView
	                android:id="@+id/infoview_mobiledatadialog_queue"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:textColor="#000000"
	                android:textSize="16sp" />
	            
	        </TableRow>	        
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:baselineAligned="false">
	        	
	            <ListView
					android:id="@+id/infoview_mobiledatadialog_lv1"
					android:layout_width="0dip"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:layout_marginRight="2dp"
		            android:drawSelectorOnTop="false"
		            android:divider="@null"
					android:dividerHeight="0dp"
		            android:background="@drawable/checklist_preferences_background" />
		        	        
		        <ListView
					android:id="@+id/infoview_mobiledatadialog_lv2"
					android:layout_width="0dip"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:layout_marginLeft="2dp"
		            android:drawSelectorOnTop="false"
		            android:divider="@null"
					android:dividerHeight="0dp"
		            android:background="@drawable/checklist_preferences_background" />
	        	        
	        </LinearLayout>
	        
		</TableLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			style="@android:style/ButtonBar"
			android:background="#444444">
	
		    <Button
			    android:id="@+id/infoview_mobiledatadialog_close"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Close"
				android:textSize="18sp"
				android:padding="20sp" />
	
		</LinearLayout>
	
	</LinearLayout>
	
</LinearLayout>
