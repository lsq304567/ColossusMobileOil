<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#000000"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="1dp"
		android:orientation="vertical"
		android:background="#ffffff">
    
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:background="#444444"
	        android:gravity="center_horizontal"
            android:text="Delivered orders"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#444444"
	        android:orientation="horizontal"
	        android:padding="5dp">
	        
	    	<TextView 
		        android:id="@+id/trip_delivered_list_trip_no"
		        android:layout_width="0px"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="Trip 12345"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
	
	        <TextView 
		        android:id="@+id/trip_delivered_list_counter"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="right"
		        android:text="2 undelivered"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />
	    	
	    </LinearLayout>
	    
	    <ListView
			android:id="@+id/trip_delivered_list_orders"
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			android:layout_margin="10dp" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			style="@android:style/ButtonBar"
			android:background="#444444">
	
			<Button
		        android:id="@+id/trip_delivered_list_close"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Close"
				android:textSize="18sp"
				android:padding="20sp" />
	
		</LinearLayout>
	
	</LinearLayout>
	
</LinearLayout>
