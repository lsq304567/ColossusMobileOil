<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:background="#ffffff"
		android:orientation="vertical">
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:background="#000000"
	        android:orientation="horizontal"
	        android:padding="5dp">
	        
	    	<TextView 
		        android:layout_width="0px"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="Amend price"
		        android:textColor="#ffffff"
		        android:textSize="20sp"
		        android:textStyle="bold" />

	    </LinearLayout>
    
		<TableLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:stretchColumns="*"
		    android:background="@android:color/black">
	    	
			<TableRow>

				<TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:textColor="#0000ff"
					android:gravity="center_horizontal"
					android:text=""
					android:textSize="14sp" />

				<TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:textColor="#0000ff"
					android:gravity="center_horizontal"
					android:text="Quantity"
					android:textSize="14sp" />

				<TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:textColor="#0000ff"
					android:gravity="center_horizontal"
					android:text="Price Ex.Vat"
					android:textSize="14sp" />

				<TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:textColor="#0000ff"
					android:gravity="center_horizontal"
					android:text="Surcharge"
					android:textSize="14sp" />

			</TableRow>
		    
		    <TableRow
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent" >
	    	    
	    	    <TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:text="Ordered"
	    	        android:textColor="@android:color/black"
					android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_orderedqty"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text=""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_orderedprice"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text = ""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_orderedsurcharge"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text = ""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	</TableRow>

	    	<TableRow
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent" >
	    	    
	    	    <TextView
					android:layout_width="0px"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
					android:text="Delivered"
	    	        android:textColor="@android:color/black"
					android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_deliveredqty"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text=""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_deliveredprice"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text = ""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	    <TextView
	    	        android:id="@+id/trip_undelivered_delivery_note_amendprice_deliveredsurcharge"
	    	        android:layout_width="0px"
	    	        android:layout_weight="1"
	    	        android:layout_height="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginBottom="1dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@android:color/white"
	    	        android:text = ""
	    	        android:textColor="@android:color/black"
	    	        android:gravity="center" />
	    	    
	    	</TableRow>

		</TableLayout>

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"
		    android:padding="8dip">
		
		    <TextView
		        android:layout_width="0px"
		        android:layout_weight="0.5"
		        android:layout_height="wrap_content"
		        android:text="" />
		    
		    <TextView
		        android:layout_width="0px"
		        android:layout_weight="1.5"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:text="New cash price\nEx. Vat"
		        android:textColor="#0000ff"
		        android:textSize="16sp" />
			
			<com.swiftsoft.colossus.mobileoil.view.MyEditText
			    android:id="@+id/trip_undelivered_delivery_note_amendprice_newprice"
			    android:layout_width="0px"
			    android:layout_weight="1"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:gravity="right"
			    android:singleLine="true"
			    android:textSize="18sp" />

		    <TextView
		        android:layout_width="0px"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="" />
								
		</LinearLayout>
		
	</LinearLayout>

	<com.swiftsoft.colossus.mobileoil.view.MyNumericKeypad
	    android:id="@+id/trip_undelivered_delivery_note_amendprice_keypad"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		style="@android:style/ButtonBar"
		android:background="#343234">

		<Button
			android:id="@+id/trip_undelivered_delivery_note_amendprice_ok"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="OK"
			android:textSize="18sp"
			android:padding="20sp" />

		<Button
			android:id="@+id/trip_undelivered_delivery_note_amendprice_cancel"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="Cancel"
			android:textSize="18sp"
			android:padding="20sp" />

	</LinearLayout>

</LinearLayout>
